<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CatDex.Models"
             xmlns:controls="clr-namespace:CatDex.Controls"
             x:Class="CatDex.Controls.CatCard"
             x:DataType="models:Cat"
             x:Name="this">
    <Grid Padding="4">
        <Frame CornerRadius="8" 
               Padding="0"
               HasShadow="True">
            <Grid RowDefinitions="*,Auto">
                <controls:WebDBImage Url="{Binding Url}" 
                                     ImageData="{Binding StoredImage}"
                                     HeightRequest="200"
                                     Grid.Row="0"/>

                <Button
                    Command="{Binding Source={x:Reference this}, Path=ToggleFavoriteCommand}"
                    CommandParameter="{Binding .}"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BackgroundColor="#80000000"
                    Text="{Binding IsFavorite, Converter={StaticResource FavoriteToIconConverter}}"
                    TextColor="White"
                    FontSize="20"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="8"
                    Grid.Row="0"/>

                <Grid Grid.Row="1"
                      Padding="8"
                      BackgroundColor="#F0F0F0">
                    <Label Text="{Binding Id, StringFormat='ID: {0}'}" 
                           FontSize="12"
                           LineBreakMode="TailTruncation"/>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentView>
