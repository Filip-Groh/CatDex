<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CatDex.Models"
             xmlns:controls="clr-namespace:CatDex.Controls"
             x:Class="CatDex.Controls.CatCard"
             x:DataType="models:Cat"
             x:Name="this">
    <Grid Padding="4">
        <Frame CornerRadius="8" 
               Padding="0"
               HasShadow="True">
            <Grid>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={x:Reference this}, Path=TappedCommand}"
                                          CommandParameter="{Binding .}"/>
                </Grid.GestureRecognizers>

                <!-- Gallery Mode -->
                <Grid RowDefinitions="*,Auto"
                      IsVisible="{Binding Source={x:Reference this}, Path=IsListMode, Converter={StaticResource InvertedBoolConverter}}">
                    <controls:WebDBImage Url="{Binding Url}" 
                                         ImageData="{Binding StoredImage}"
                                         HeightRequest="200"
                                         Grid.Row="0"/>

                    <Button
                        Command="{Binding Source={x:Reference this}, Path=ToggleFavoriteCommand}"
                        CommandParameter="{Binding .}"
                        WidthRequest="40"
                        HeightRequest="40"
                        CornerRadius="20"
                        BackgroundColor="#80000000"
                        Text="{Binding IsFavorite, Converter={StaticResource FavoriteToIconConverter}}"
                        TextColor="White"
                        FontSize="20"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        Margin="8"
                        Grid.Row="0"/>

                    <Grid Grid.Row="1"
                          Padding="8"
                          BackgroundColor="#F0F0F0">
                        <Label Text="{Binding Id, StringFormat='ID: {0}'}" 
                               FontSize="12"
                               LineBreakMode="TailTruncation"/>
                    </Grid>
                </Grid>

                <!-- List Mode -->
                <Grid ColumnDefinitions="120,*,Auto"
                      IsVisible="{Binding Source={x:Reference this}, Path=IsListMode}">
                    <controls:WebDBImage Url="{Binding Url}" 
                                         ImageData="{Binding StoredImage}"
                                         HeightRequest="100"
                                         WidthRequest="120"
                                         Grid.Column="0"/>

                    <VerticalStackLayout Grid.Column="1"
                                         Padding="8"
                                         VerticalOptions="Center">
                        <Label FontSize="16"
                               FontAttributes="Bold"
                               LineBreakMode="TailTruncation"
                               Text="{Binding Breeds, Converter={StaticResource FirstBreedNameConverter}}"/>

                        <Label FontSize="12"
                               TextColor="Gray"
                               LineBreakMode="TailTruncation"
                               Text="{Binding Breeds, Converter={StaticResource AdditionalBreedsConverter}}">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label"
                                             Binding="{Binding Breeds.Count, Converter={StaticResource CompareConverter}, ConverterParameter=2}"
                                             Value="False">
                                    <Setter Property="IsVisible" Value="False"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>

                    <Button
                        Command="{Binding Source={x:Reference this}, Path=ToggleFavoriteCommand}"
                        CommandParameter="{Binding .}"
                        WidthRequest="40"
                        HeightRequest="40"
                        CornerRadius="20"
                        BackgroundColor="#80000000"
                        Text="{Binding IsFavorite, Converter={StaticResource FavoriteToIconConverter}}"
                        TextColor="White"
                        FontSize="20"
                        VerticalOptions="Center"
                        Margin="8"
                        Grid.Column="2"/>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentView>
