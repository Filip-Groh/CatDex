<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CatDex.Models"
             xmlns:viewmodels="clr-namespace:CatDex.ViewModels"
             x:Class="CatDex.Views.SearchPage"
             x:DataType="viewmodels:SearchViewModel"
             Title="SearchPage">

    <Grid RowDefinitions="Auto,*">
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Grid.Row="0"
                           Margin="0,10,0,10"/>

        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     Grid.Row="1">
            <CollectionView ItemsSource="{Binding Cats}"
                            SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                                     Span="2" 
                                     HorizontalItemSpacing="8"
                                     VerticalItemSpacing="8"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Cat">
                        <Grid Padding="4">
                            <Frame CornerRadius="8" 
                                   Padding="0"
                                   HasShadow="True">
                                <Grid RowDefinitions="*,Auto">
                                    <Image Source="{Binding Url}" 
                                           Aspect="AspectFill"
                                           HeightRequest="200"
                                           Grid.Row="0"/>

                                    <Grid Grid.Row="1"
                                          Padding="8"
                                          BackgroundColor="#F0F0F0">
                                        <Label Text="{Binding Id, StringFormat='ID: {0}'}" 
                                               FontSize="12"
                                               LineBreakMode="TailTruncation"/>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Padding="20">
                            <Label Text="No cats found in database"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   TextColor="Gray"/>
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>