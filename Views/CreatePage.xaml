<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CatDex.ViewModels"
             xmlns:models="clr-namespace:CatDex.Models"
             x:Class="CatDex.Views.CreatePage"
             x:DataType="viewmodels:CreateViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label 
                Text="Create a Custom Cat"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,10" />

            <Border 
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeShape="RoundRectangle 10"
                Padding="15"
                Margin="0,0,0,10">
                <VerticalStackLayout Spacing="10">

                    <Grid>
                        <Label Text="Select Image" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" />
                        <Button 
                            ImageSource="upload.svg"
                            Command="{Binding PickImageCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                            HorizontalOptions="End"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="25"
                            Padding="10"
                            BackgroundColor="Transparent">
                            <Button.TextColor>
                                <AppThemeBinding Light="Black" Dark="White" />
                            </Button.TextColor>
                        </Button>
                    </Grid>

                    <Image 
                        Source="{Binding ImageSource}"
                        IsVisible="{Binding ImageSource, Converter={StaticResource IsNotNullConverter}}"
                        HeightRequest="200"
                        Aspect="AspectFit"
                        Margin="0,10,0,0" />

                    <HorizontalStackLayout 
                        Spacing="10"
                        Margin="0,10,0,0"
                        IsVisible="{Binding ImageSource, Converter={StaticResource IsNotNullConverter}}">
                        <Label Text="Dimensions:" FontAttributes="Bold" VerticalOptions="Center" />
                        <Label Text="{Binding Width}" VerticalOptions="Center" />
                        <Label Text="x" VerticalOptions="Center" />
                        <Label Text="{Binding Height}" VerticalOptions="Center" />
                        <Label Text="px" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Border 
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeShape="RoundRectangle 10"
                Padding="15"
                Margin="0,0,0,10">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Select Breeds (Optional)" FontSize="16" FontAttributes="Bold" />

                    <!-- Selected Breeds List (Vertical) -->
                    <VerticalStackLayout Spacing="8">
                        <BindableLayout.ItemsSource>
                            <Binding Path="SelectedBreeds" />
                        </BindableLayout.ItemsSource>
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:Breed">
                                <Border 
                                    StrokeThickness="0"
                                    BackgroundColor="Transparent"
                                    StrokeShape="RoundRectangle 15"
                                    Padding="12,6">
                                    <Grid>
                                        <Label 
                                            Text="{Binding Name}"
                                            VerticalOptions="Center"
                                            FontSize="14"
                                            HorizontalOptions="Start"/>
                                        <Button
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CreateViewModel}}, Path=RemoveBreedCommand}"
                                            CommandParameter="{Binding .}"
                                            Text="Ã—"
                                            FontSize="18"
                                            FontAttributes="Bold"
                                            WidthRequest="24"
                                            HeightRequest="24"
                                            CornerRadius="12"
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            VerticalOptions="Center"
                                            HorizontalOptions="End">
                                            <Button.TextColor>
                                                <AppThemeBinding Light="Black" Dark="White" />
                                            </Button.TextColor>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>

                    <!-- Breed Picker (at the end) -->
                    <Picker 
                        ItemsSource="{Binding AvailableBreeds}"
                        ItemDisplayBinding="{Binding Name}"
                        Title="Select a Breed"
                        SelectedIndexChanged="OnBreedSelected"/>
                </VerticalStackLayout>
            </Border>

            <Label 
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"
                Margin="0,10,0,0" />

            <Button
                Text="Create Cat"
                Command="{Binding CreateCatCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontAttributes="Bold"
                Margin="0,10,0,20" />

            <ActivityIndicator 
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                Color="{StaticResource Primary}"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>