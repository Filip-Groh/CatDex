<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CatDex.ViewModels"
             xmlns:controls="clr-namespace:CatDex.Controls"
             x:Class="CatDex.Views.FullScreenImagePage"
             x:DataType="viewmodels:FullScreenImageViewModel"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">

    <Grid>
        <controls:WebDBImage Url="{Binding ImageUrl}" 
                             ImageData="{Binding ImageData}"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"/>

        <Button Text="✕"
                Command="{Binding CloseCommand}"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"
                BackgroundColor="#80000000"
                TextColor="White"
                FontSize="24"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="20"/>

        <Button Text="⬇"
                Command="{Binding DownloadCommand}"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"
                BackgroundColor="#80000000"
                TextColor="White"
                FontSize="24"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="20"/>

        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseCommand}"/>
        </Grid.GestureRecognizers>
    </Grid>
</ContentPage>
