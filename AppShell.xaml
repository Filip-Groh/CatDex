<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CatDex.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CatDex.Views"
    Title="CatDex">

    <TabBar>
        <Tab Title="Discover" Icon="compass.svg">
            <ShellContent ContentTemplate="{DataTemplate local:DiscoverPage}" />
        </Tab>

        <Tab Title="Seen" Icon="eye.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SeenPage}" />
        </Tab>

        <Tab Title="Create" Icon="add.svg">
            <ShellContent ContentTemplate="{DataTemplate local:CreatePage}" />
        </Tab>

        <Tab Title="Favorites" Icon="favorite_full.svg">
            <ShellContent ContentTemplate="{DataTemplate local:FavoritePage}" />
        </Tab>

        <Tab Title="Settings" Icon="settings.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
