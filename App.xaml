<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CatDex"
             xmlns:converters="clr-namespace:CatDex.Converters"
             x:Class="CatDex.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:FavoriteToIconConverter x:Key="FavoriteToIconConverter" />
            <converters:CatFavoriteStatusConverter x:Key="CatFavoriteStatusConverter" />
            <converters:CatIsStoredConverter x:Key="CatIsStoredConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
